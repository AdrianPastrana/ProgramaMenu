    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        
        String[] names = {"p", "q", "( p -> q )", "( p -> q ) ^ p", "[ ( p -> q ) ^ p ] -> q"};
        String data[][] = {};
        modelo = new DefaultTableModel(data,names);
        modelo = usr.expresion(modelo);
        
        tabla.setModel(modelo);
        resultado.setText(resultado.getText()+usr.resultado());
    }                                        

